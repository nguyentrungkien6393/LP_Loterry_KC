<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mTV_Name_Game"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="LTR_JACKPOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
          android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:background="@drawable/number"
                android:id="@+id/mTV_Number1"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="1"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number2"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number"
                android:gravity="center"
                android:text="2"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number3"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number"
                android:gravity="center"
                android:text="3"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number"
                android:gravity="center"
                android:text="4" />
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number5"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number"
                android:gravity="center"
                android:text="5"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number_Special1"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number_special"
                android:gravity="center"
                android:text="6"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mTV_Number_Special2"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/number_special"
                android:gravity="center"
                android:text="7"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/mTV_TXHash"
        android:text="Txhash : fjjghfdjhfgskhdkjfhskjdfhksdjhifer4768743683rig4j"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mTV_Price"
            android:gravity="center_vertical"
            android:text="Price 1000LTR"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mTime_Date"
            android:gravity="center_vertical"
            android:text="2018-10-22 7:55:51"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>