<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bogoc"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#ffffff"
        android:text="@string/Status_BuyLTR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#FECC45"
        android:id="@+id/mTV_Messenger_Success_BuyLTR"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/Wait_5_Minute"
        android:textColor="#000000"
        android:textSize="18sp"
        android:id="@+id/mTV_TinNhan"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="ETH TxHash:"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/mTV_ETH_TxHash"
        android:textColor="#0066cc"
        android:text="ETH TxHash"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:text="LTR TxHash:"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mTV_LTR_TxHash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="LTR TxHash"
        android:textColor="#0066cc" />
</LinearLayout>